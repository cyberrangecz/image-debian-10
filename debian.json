{
    "builders": [
        {
            "use_default_display": "{{user `headless`}}",
            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " priority=critical",
                " locale=en_US.UTF-8",
                " keyboard-configuration/xkb-keymap=us",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<enter>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "boot_key_interval": "10ms",
            "disk_interface": "virtio-scsi",
            "disk_size": "{{ user `disk_size` }}",
            "format": "raw",
            "headless": "{{user `headless`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_url": "{{user `iso_url`}}",
            "name": "qemu",
            "net_device": "virtio-net",
            "output_directory": "target-qemu",
            "qemuargs": [
                [
                    "-m",
                    "{{ user `memory_size` }}m"
                ],
                [
                    "-smp",
                    "cpus={{ user `cpus` }},maxcpus=16,cores=4"
                ]
            ],
            "shutdown_command": "{{user `shutdown_command`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_port": "{{user `ssh_port`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "type": "qemu",
            "vm_name": "{{user `vm_name`}}",
            "vnc_bind_address": "{{user `vnc_vrdp_bind_address`}}",
            "vnc_port_min": "{{user `vnc_vrdp_port`}}",
            "vnc_port_max": "{{user `vnc_vrdp_port`}}"
        },
        {
            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " priority=critical",
                " locale=en_US.UTF-8",
                " keyboard-configuration/xkb-keymap=us",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<enter>"
            ],
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{ user `disk_size` }}",
            "guest_os_type": "Debian_64",
            "headless": "{{user `headless`}}",
            "http_directory": "{{user `http_directory`}}",
            "http_port_max": "{{user `http_port_max`}}",
            "http_port_min": "{{user `http_port_min`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_url": "{{user `iso_url`}}",
            "name": "vbox",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{ user `memory_size` }}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{ user `cpus` }}"
                ]
            ],
            "shutdown_command": "echo 'vagrant' | {{user `shutdown_command`}}",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_port": "{{user `ssh_port`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
            "type": "virtualbox-iso",
            "vm_name": "{{user `vm_name`}}",
            "vrdp_bind_address": "{{user `vnc_vrdp_bind_address`}}",
            "vrdp_port_min": "{{user `vnc_vrdp_port`}}",
            "vrdp_port_max": "{{user `vnc_vrdp_port`}}"
    	}
    ],
    "provisioners": [
        {
  	    "type": "file",
  	    "source": "cloud.cfg",
	    "destination": "/tmp/cloud.cfg"
	},
        {
            "scripts": [
                "scripts/zerodisk.sh"
            ],
            "type": "shell"
        },
        {
            "scripts": [
                "scripts/packages.sh",
                "scripts/fixesQEMU.sh"
            ],
            "type": "shell",
            "only": ["qemu"]
        },
        {
            "scripts": [
                "scripts/addVagrantUser.sh",
                "scripts/guestAdditions.sh",
                "scripts/fixesVBox.sh"
            ],
            "type": "shell",
            "only": ["vbox"]
        },
        {
            "scripts": [
                "scripts/fixes.sh",
                "scripts/cleanup.sh"
            ],
            "type": "shell"
        }
    ],
    "post-processors": [
       {
  	    "type": "vagrant",
  	    "output" : "target-vbox/debian.box",
        "only": ["vbox"]
       }
    ],
    "variables": {
        "boot_wait": "5s",
        "cpus": "4",
        "disk_size": "16384",
        "headless": "true",
        "http_directory": "http",
        "http_port_max": "10089",
        "http_port_min": "10082",
        "iso_checksum": "fff31b94f193e094400281d3f01589456562c8017f11cb1744fc325d83ba2ed4",
        "iso_url": "https://cdimage.debian.org/mirror/cdimage/archive/10.6.0/amd64/iso-cd/debian-10.6.0-amd64-xfce-CD-1.iso",
        "memory_size": "4096",
        "shutdown_command": "shutdown -P now",
        "ssh_password": "toor",
        "ssh_port": "22",
        "ssh_username": "root",
        "ssh_wait_timeout": "90m",
        "vm_name": "debian",
        "vnc_vrdp_bind_address": "127.0.0.1",
        "vnc_vrdp_port": "5900"
    }
}
